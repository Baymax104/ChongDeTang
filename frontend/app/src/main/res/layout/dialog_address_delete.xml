<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="handler"
                type="com.cdtde.chongdetang.view.my.address.DeleteDialog.Handler" />
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    style="@style/DialogButtonTextStyle"
                    android:layout_marginVertical="10dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address_delete_confirm"
                    style="@style/DialogContentTextStyle"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_3"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/cancel"
                        android:id="@+id/cancel"
                        android:background="?attr/selectableItemBackground"
                        style="@style/DialogButtonTextStyle"
                        android:onClick="@{handler.cancel}"/>
                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_3"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/confirm"
                        android:id="@+id/confirm"
                        android:background="?attr/selectableItemBackground"
                        style="@style/DialogButtonTextStyle"
                        android:onClick="@{handler.confirm}"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>