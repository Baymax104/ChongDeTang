<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="collectionAdapter"
                type="com.cdtde.chongdetang.util.IndexCollectionAdapter" />
        <variable
                name="viewModel"
                type="com.cdtde.chongdetang.viewModel.IndexViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_layout">

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bar_color"
                    android:id="@+id/toolbar">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="首页logo"
                        android:gravity="center" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.stx.xhb.androidx.XBanner
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:id="@+id/banner"
                        app:isClipChildrenMode="true"
                        app:pointsPosition="CENTER"
                        android:layout_marginBottom="5dp"
                        bannerData="@{viewModel.bannerImg}" />

                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:rowCount="2"
                        android:columnCount="3"
                        android:orientation="horizontal">

                    <include
                            layout="@layout/item_index_entry"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/entry1"
                            bind:title="@{@string/index_entry1}"
                            bind:img="@{@drawable/test_circle}" />
                    <include
                            layout="@layout/item_index_entry"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/entry2"
                            bind:title="@{@string/index_entry2}"
                            bind:img="@{@drawable/test_circle}" />
                    <include
                            layout="@layout/item_index_entry"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/entry3"
                            bind:title="@{@string/index_entry3}"
                            bind:img="@{@drawable/test_circle}" />
                    <include
                            layout="@layout/item_index_entry"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/entry4"
                            bind:title="@{@string/index_entry4}"
                            bind:img="@{@drawable/test_circle}" />
                    <include
                            layout="@layout/item_index_entry"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/entry5"
                            bind:title="@{@string/index_entry5}"
                            bind:img="@{@drawable/test_circle}" />
                    <include
                            layout="@layout/item_index_entry"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/entry6"
                            bind:title="@{@string/index_entry6}"
                            bind:img="@{@drawable/test_circle}" />

                </GridLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp">

                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="@string/search_collection"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_alignParentStart="true" />

                    <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="@string/all"
                            android:textSize="16sp"
                            android:gravity="center_vertical|end"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/index_collection_entry" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:id="@+id/collection_list"
                        android:padding="5dp"
                        tools:listitem="@layout/item_index_collection"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        recyclerAdapter="@{collectionAdapter}"
                        recyclerData="@{viewModel.collections}"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/gray_4" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="@string/index_moment"
                            android:gravity="center_vertical|start"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_alignParentStart="true" />

                    <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="@string/all"
                            android:textSize="16sp"
                            android:gravity="center_vertical|end"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/index_moment_entry" />
                </RelativeLayout>

                <include layout="@layout/item_moment" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp">

                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="@string/index_info"
                            android:gravity="center_vertical|start"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_alignParentStart="true" />

                    <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="@string/all"
                            android:textSize="16sp"
                            android:gravity="center_vertical|end"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/index_info_entry" />
                </RelativeLayout>

                <include layout="@layout/item_info" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>