<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
                name="validity"
                type="Boolean" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:fitsSystemWindows="true"
            tools:ignore="ContentDescription,RelativeOverlap,RtlSymmetry">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bar_color"
                    android:id="@+id/toolbar"
                    android:fitsSystemWindows="true">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/update_name"
                            style="@style/CommonToolbarTitleStyle"
                            android:layout_alignParentStart="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/confirm"
                            android:text="@string/confirm"
                            android:layout_alignParentEnd="true"
                            style="@style/ToolbarOptionTextStyle"/>
                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/gray_4"
                android:paddingHorizontal="15dp">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/name_edit"
                    android:hint="@string/name_hint"
                    android:background="#00ffffff"
                    android:singleLine="true"
                    android:autofillHints="no"
                    android:inputType="text"
                    android:fontFamily="@font/text_regular"/>

            <ImageView
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/clean_button"
                    android:id="@+id/clean_btn"
                    android:visibility="@{nameEdit.text.toString().equals(``) ? View.INVISIBLE : View.VISIBLE}"
                    android:onClick="@{() -> nameEdit.setText(``)}"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{validity ? @string/update_name_tip : @string/update_name_wrong_tip}"
                android:paddingStart="15dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:fontFamily="@font/text_regular"
                android:textColor="@{validity ? @color/gray_1 : @color/main_variant_color}"/>
    </LinearLayout>
</layout>