<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
                name="viewModel"
                type="com.cdtde.chongdetang.viewModel.my.UserPhoneViewModel" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            tools:ignore="autofill,ContentDescription">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_bind_phone"
                android:textColor="@color/gray_1"
                android:textSize="16sp"
                android:fontFamily="@font/text_regular"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.user.phone}"
                android:textColor="@color/main_color"
                android:textSize="23sp"
                android:fontFamily="@font/regular"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="30dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_phone_hint"
                android:gravity="center_vertical|start"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:fontFamily="@font/regular"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/gray_4">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/gray_4"
                    android:paddingHorizontal="15dp">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/new_edit"
                        android:hint="@string/new_phone_hint"
                        android:background="#00ffffff"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:fontFamily="@font/text_regular"
                        android:afterTextChanged="@{()->viewModel.setPhone(newEdit.getText().toString())}"/>

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/clean_button"
                        android:visibility="@{newEdit.text.toString().equals(``) ? View.INVISIBLE : View.VISIBLE}"
                        android:onClick="@{() -> newEdit.setText(``)}"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_2"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/gray_4"
                    android:paddingHorizontal="10dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/validate"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/text_regular" />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/validate_edit"
                        android:hint="@string/validate_hint"
                        android:background="#00ffffff"
                        android:singleLine="true"
                        android:autofillHints="no"
                        android:inputType="number"
                        android:fontFamily="@font/text_regular"
                        android:layout_marginHorizontal="10dp"
                        android:afterTextChanged="@{()->viewModel.setCode(validateEdit.getText().toString())}"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/small_button_bg"
                        android:layout_marginVertical="5dp"
                        android:text="@{viewModel.tip}"
                        android:enabled="@{viewModel.enabled}"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/regular"
                        tools:ignore="TouchTargetSizeCheck"
                        android:onClick="@{()->viewModel.sendSms()}"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>