<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChongDeTang" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_color</item>
        <item name="colorSecondaryVariant">@color/second_variant_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!--字体样式-->
    <!--横条页面跳转入口文字样式-->
    <style name="EntryTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--带特殊布局的ToolBar标题样式-->
    <style name="ToolbarTitleStyle">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <!--带返回键的ToolBar标题样式-->
    <style name="CommonToolbarTitleStyle" parent="ToolbarTitleStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!--块标签样式-->
    <style name="LabelStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <!--搜索页块标签文字样式-->
    <style name="SearchLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--卡片列表项title样式-->
    <style name="ItemTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <!--Tab文字样式-->
    <style name="TabTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>


    <!--个人资料页面文字样式-->
    <style name="UserInfoTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--对话框按钮文字样式-->
    <style name="DialogButtonTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.ChongDeTang.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChongDeTang.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChongDeTang.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--ToolBar确定按钮文字样式-->
    <style name="ToolbarConfirmTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_variant_color</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

</resources>