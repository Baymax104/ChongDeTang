<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChongDeTang" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_color</item>
        <item name="colorSecondaryVariant">@color/second_variant_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!--字体样式-->
    <!--横条页面跳转入口文字样式-->
    <style name="EntryTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--带特殊布局的ToolBar标题样式-->
    <style name="ToolbarTitleStyle">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <!--带返回键的ToolBar标题样式-->
    <style name="CommonToolbarTitleStyle" parent="ToolbarTitleStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!--块标签样式-->
    <style name="LabelStyle">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <!--搜索页块标签文字样式-->
    <style name="SearchLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--卡片列表项title样式-->
    <style name="ItemTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <!--Tab文字样式-->
    <style name="TabTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>


    <!--个人资料页面文字样式-->
    <style name="UserInfoTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--对话框按钮文字样式-->
    <style name="DialogButtonTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogContentTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <!--ToolBar确定按钮文字样式-->
    <style name="ToolbarOptionTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_variant_color</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <!--TextInputLayout输入框样式-->
    <style name="TextInputEditStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="BigButtonTextStyle" parent="ButtonTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallButtonTextStyle" parent="ButtonTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppointTextAreaStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/text_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/text_area_bg</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CollapsedToolbarTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ExpandedToolbarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppointmentInfoTextStyle">
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:fontFamily">@font/text_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DslTabStyle">
        <item name="tab_orientation">HORIZONTAL</item>
        <item name="tab_item_is_equ_width">true</item>
        <item name="tab_default_index">0</item>
        <item name="tab_draw_indicator">true</item>
        <item name="tab_select_color">@color/white</item>
        <item name="tab_deselect_color">@color/black</item>
        <item name="tab_enable_gradient_color">true</item>
        <item name="tab_indicator_shape">RECTANGLE</item>
        <item name="tab_indicator_solid_color">@color/main_color</item>
        <item name="tab_indicator_radius">15dp</item>
        <item name="tab_indicator_height">30dp</item>
        <item name="tab_indicator_y_offset">10dp</item>
        <item name="tab_indicator_enable_flow">true</item>
    </style>
</resources>